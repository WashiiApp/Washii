<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="800.0" styleClass="main-background" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.washii.presentation.home.MainLayoutNegocioController">
   <top>
      <HBox alignment="CENTER" prefHeight="32.0" spacing="10.0" styleClass="header" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../assets/logos/lg-washii-blue-32.png" />
               </image>
            </ImageView>
            <Label text="Washii" textFill="#4eafd9">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Bem Vindo, Fulanin" />
            <StackPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="32.0" prefWidth="32.0">
               <children>
                  <FontIcon iconLiteral="mdi2b-bell" iconSize="18" selectionEnd="1" styleClass="icon" />
                  <Label alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="0" textFill="#ff8400" visible="false">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <padding>
                        <Insets right="1.0" top="1.0" />
                     </padding>
                  </Label>
               </children>
            </StackPane>
         
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding></HBox>
   </top>
   <left>
      <VBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="200.0" minHeight="200.0" minWidth="150.0" prefWidth="200.0" spacing="5.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <Region VBox.vgrow="ALWAYS" />
            <HBox fx:id="navHome" alignment="CENTER_LEFT" focusTraversable="true" onMouseClicked="#handleNavClick" spacing="10.0">
               <children>
                  <FontIcon iconLiteral="mdi2h-home" iconSize="18">
                     <styleClass>
                        <String fx:value="font-icon" />
                        <String fx:value="icon" />
                     </styleClass></FontIcon>
                  <Label text="Home" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <styleClass>
                  <String fx:value="nav-container" />
                  <String fx:value="nav-container-active" />
               </styleClass>
            </HBox>
            <HBox fx:id="navAgendamentos" alignment="CENTER_LEFT" focusTraversable="true" onMouseClicked="#handleNavClick" spacing="10.0" styleClass="nav-container">
               <children>
                  <FontIcon iconLiteral="mdi2c-calendar-blank" iconSize="18" styleClass="icon" />
                  <Label text="Agendamentos" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox fx:id="navHistorico" alignment="CENTER_LEFT" focusTraversable="true" onMouseClicked="#handleNavClick" spacing="10.0" styleClass="nav-container">
               <children>
                  <FontIcon iconLiteral="mdi2l-list-box" iconSize="18" styleClass="icon" />
                  <Label text="Historico" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox fx:id="navServico" alignment="CENTER_LEFT" focusTraversable="true" onMouseClicked="#handleNavClick" spacing="10.0" styleClass="nav-container">
               <children>
                  <FontIcon iconLiteral="mdi2t-toolbox" iconSize="18" styleClass="icon" />
                  <Label text="Serviços" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox fx:id="navRelatorio" alignment="CENTER_LEFT" focusTraversable="true" onMouseClicked="#handleNavClick" spacing="10.0" styleClass="nav-container">
               <children>
                  <FontIcon iconLiteral="mdi2c-chart-box" iconSize="18" styleClass="icon" />
                  <Label text="Relatórios" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox fx:id="navPerfil" alignment="CENTER_LEFT" focusTraversable="true" onMouseClicked="#handleNavClick" spacing="10.0" styleClass="nav-container">
               <children>
                  <FontIcon iconLiteral="mdi2a-account" iconSize="18" styleClass="icon" />
                  <Label text="Perfil" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <Region VBox.vgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#onSair" styleClass="button-secondary" text="Sair" textFill="#3e9bb5">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
               <padding>
                  <Insets bottom="1.0" left="20.0" right="20.0" top="1.0" />
               </padding></Button>
         </children></VBox>
   </left>
   <center>
      <Label text="DASHBOARD" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
   </center>
</BorderPane>
